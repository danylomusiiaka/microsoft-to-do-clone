{
  "printWidth": 150,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "auto",
  "quoteProps": "as-needed",
  "proseWrap": "preserve",
  "embeddedLanguageFormatting": "auto",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^@/styles/(.*)$",
    "^react",
    "^next",
    "^@/app/(.*)$",
    "^@/contexts/(.*)$",
    "^@/\\.\\./public/(.*)$",
    "^@/components/(.*)$",
    "^@/functions/(.*)$",
    "^@/services/(.*)$",
    "^@/interfaces/(.*)$",
    "^@/constants/(.*)$",
    "^@/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
